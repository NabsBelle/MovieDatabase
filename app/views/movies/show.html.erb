<div class="main movie-show">
  <div class="container">
    <div class="movie">

      <!-- Display the movie's info here -->

      <div class="info">
        <%= image_tag @movie.image%>
        <h3 class="movie-title"><%= @movie.title %></h3>
        <p class="movie-release-year"><%= @movie.release_year %></p>
        <p class="movie-plot"><%= @movie.plot  %></p>

        <p> <%= link_to "Add", movie_path(@movie), { :class => 'btn btn-primary' }%> </p>
        <p> <%= link_to "Edit", movie_path(@movie), { :class => 'btn btn-primary' } %> </p>

        <p>
        <%= link_to "Home", movie_path(@movie), { :class => 'btn btn-primary' } %>
        </p>
      </div>
    </div>

    <div class="footer">
      <div class="container">
        <p>@ 2021 NABSBELLE Projects</p>
      </div>
    </div>
  </div>
</div>
