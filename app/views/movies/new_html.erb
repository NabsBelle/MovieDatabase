<div class="contact-main">
  <div class="content container">
    <h1>Add Movie</h1>
    <div class="row">
      <div class="col-md-4 col-md-4-offset"></div>
      <div class="col-md-4">
        <%= form_for(@movie) do |f| %>
          <div class="form-group">
            <%= f.label "Title" %>
            <%= f.text_field :title, { :class => "form-control" } %>
          </div>
          <div class="form-group">
            <%= f.label "image" %>
            <%= f.text_field :image, { :class => "form-control" } %>
          </div>
          <div class="form-group">
            <%= f.label "release_year" %>
            <%= f.text_field :release_year, { :class => "form-control" } %>
          </div>
          <div class="form-group">
            <%= f.label "Description" %>
            <%= f.text_field :plot, { :class => "form-control" } %>
          </div>
          <%= f.submit "Add", { :class => "btn btn-default" } %>
        <% end %>
      </div>
      <div class="col-md-4 col-md-4-offset"></div>
    </div>
  </div>
</div>
