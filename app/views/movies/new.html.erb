<div class="new-main">
  <div class="content container">
       <h1>Add Movie</h1>
    <div class="row">
      <div class="col-md-4 col-md-4-offset"></div>
      <div class="col-md-4">
        <%= form_for(@movie) do |f| %>
          <div class="form-group">
          <p>  <%= f.label "Title name" %>
            <%= f.text_field :name, { :class => "form-control" } %></p>
          </div>
          <div class="form-group">
          <p>  <%= f.label "image" %>
            <%= f.text_field :picture, { :class => "form-control" } %></p>
          </div>
          <div class="form-group">
          <p>  <%= f.label "release_date" %>
            <%= f.text_field :release_date, { :class => "form-control" } %></p>
          </div>
          <div class="form-group">
          <p>  <%= f.label "Description" %>
            <%= f.text_field :description, { :class => "form-control" } %></p>
          </div>
          <div id="rating-form">
          <p>  <%= f.label "Rating" %>
            <%= f.text_field :rating, { :class => "form-control" } %></p>
          </div>
        <p>  <%= f.submit "Add", { :class => "btn btn-primary" } %></p>
        <p><%= link_to "Back",movies_path(@movie), { :class => "btn btn-primary"}  %> </p>
        <% end %>

        <script>
        $('#rating-form').raty({
          path: '/assets/',
          scoreName: 'movie[rating]'
        });
      </script>

      </div>

    </div>
  </div>
</div>
